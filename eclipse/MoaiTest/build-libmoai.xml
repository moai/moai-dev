<?xml version="1.0" encoding="UTF-8"?>
<project name="MoaiTest.build-libmoai" default="build">

    <!-- ================================================================ -->
    <!-- build -->
    <!-- ================================================================ -->	
	<target name="build">
		
		<echo level="info" message="Builing libmoai..."/>
		
		<exec executable="bash" dir="../libmoai">
			<arg line="build-osx.sh"/>
		</exec>
	</target>

    <!-- ================================================================ -->
    <!-- clean -->
    <!-- ================================================================ -->	
	<target name="clean">
		
		<echo level="info" message="Cleaning libmoai..."/>
		
		<exec executable="bash" dir="../libmoai">
			<arg line="clean.sh"/>
		</exec>
	</target>
	
</project>